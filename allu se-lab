
#include <stdio.h>
#include <math.h>
#include <stdlib.h>

int main() {
    // Time (t) from 0 to 24 (step size 0.1 for smooth plotting)
    double t, a = -0.1, b = 2.4, c = 10;
    double T;
   
    printf("Weather Model - Version 1 (Hardcoded)\n");
   
    // Loop to simulate time from 0 to 24 hours
    for (t = 0; t <= 24; t += 0.1) {
        T = a * t * t + b * t + c;  // Quadratic model
        printf("Time: %.1f hours, Temperature: %.2f째C\n", t, T);
    }
   
    return 0;
}

#include <stdio.h>
#include <math.h>
#include <stdlib.h>

int main() {
    // Time (t) from 0 to 24 (step size 0.1 for smooth plotting)
    double t, a = -0.1, b = 2.4, c = 10;
    double T;
   
    printf("Weather Model - Version 1 (Hardcoded)\n");
   
    // Loop to simulate time from 0 to 24 hours
    for (t = 0; t <= 24; t += 0.1) {
        T = a * t * t + b * t + c;  // Quadratic model
        printf("Time: %.1f hours, Temperature: %.2f째C\n", t, T);
    }
   
    return 0;
}
#include <stdio.h>
#include <math.h>
#include <stdlib.h>

int main() {
    double t, a, b, c, T;
   
    printf("Enter coefficient a: ");
    scanf("%lf", &a);
    printf("Enter coefficient b: ");
    scanf("%lf", &b);
    printf("Enter coefficient c: ");
    scanf("%lf", &c);
   
    printf("Weather Model - Version 2 (Keyboard Input)\n");

   
    for (t = 0; t <= 24; t += 0.1) {
        T = a * t * t + b * t + c;
        printf("Time: %.1f hours, Temperature: %.2f째C\n", t, T);
    }
   
    return 0;
}

