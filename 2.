#include <stdio.h>
#include <math.h>
#include <stdlib.h>

int main() {
    double t, a, b, c, T;
   
    printf("Enter coefficient a: ");
    scanf("%lf", &a);
    printf("Enter coefficient b: ");
    scanf("%lf", &b);
    printf("Enter coefficient c: ");
    scanf("%lf", &c);
   
    printf("Weather Model - Version 2 (Keyboard Input)\n");
   
    for (t = 0; t <= 24; t += 0.1) {
        T = a * t * t + b * t + c;
        printf("Time: %.1f hours, Temperature: %.2fÂ°C\n", t, T);
    }
   
    return 0;
}
